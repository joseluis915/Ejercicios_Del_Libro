                        <Image Source="/Resources/Documento.png" Height="35" />
                        <Label Content="Capitulo 5" FontSize="22" FontWeight="Bold" Foreground="#E5000000" VerticalContentAlignment="Center"/>
                </StackPanel>
            </Button>
        </StackPanel>

            <StackPanel Orientation="Horizontal" Height="60" Margin="0,20,0,0" HorizontalAlignment="Center">
                <Button Width="160" Click="ButtonClick_Cap6_MenuPrincipal">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/Resources/Documento.png" Height="35" />
                        <Label Content="Capitulo 6" FontSize="22" FontWeight="Bold" Foreground="#E5000000" VerticalContentAlignment="Center"/>
                    </StackPanel>
                </Button>
                <Button Width="160" Margin="25,0,0,0" Click="ButtonClick_Cap7_MenuPrincipal" >
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/Resources/Documento.png" Height="35" />
                        <Label Content="Capitulo 7" FontSize="22" FontWeight="Bold" Foreground="#E5000000" VerticalContentAlignment="Center"/>
                    </StackPanel>
                </Button>
            </StackPanel>

        </StackPanel>
    </Grid>
