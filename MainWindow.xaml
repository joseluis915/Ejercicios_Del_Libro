                    <Label Content="Menu Prinicipal" FontWeight="Bold" Height="35" FontSize="28" Padding="0,0,0,0" />
                </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,5,0,0" Height="50">
                <Label Content="Seleccione un capitulo: " FontWeight="Bold" FontSize="20" FontStyle="Italic" VerticalAlignment="Center"/>
            </StackPanel>
            
        <StackPanel Orientation="Horizontal" Height="60" Margin="0,10,0,0" HorizontalAlignment="Center">
                <Button Width="160" Click="ButtonClick_Cap4_MenuPrincipal">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/Resources/Documento.png" Height="35" />
