                    <StackPanel Orientation="Horizontal">
                        <Image />
                        <Label Content="Ejercicio #4" FontSize="22" FontWeight="Bold" Foreground="#E5000000" VerticalContentAlignment="Center"/>
                    </StackPanel>
                </Button>

                <Button Width="150" Margin="50,0,0,0" >
